<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="user"
            type="com.example.chat.domain.user.User" />
    </data>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:paddingBottom="@dimen/spacing_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_user"
                    android:layout_width="@dimen/account_photo_width"
                    android:layout_height="@dimen/account_photo_width"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/circle_circle"
                    android:src="@drawable/contact_photo_sample"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:profileImage="@{user.image}" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_normal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_user"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/label_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:lines="1"
                        android:text="@{user.name}"
                        android:textStyle="bold"
                        android:textSize="@dimen/medium_text_size"
                        android:textColor="@color/woodsmoke"
                        tools:text="@string/name" />

                    <TextView
                        android:id="@+id/label_user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:textColor="@color/dark_grey"
                        android:lines="1"
                        android:text="@{user.email}"
                        tools:text="@string/email" />

                    <TextView
                        android:id="@+id/label_user_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_tiny"
                        android:lines="1"
                        android:textColor="@color/dark_grey"
                        android:text="@{user.status}"
                        android:visibility="@{user.status.empty ? View.GONE : View.VISIBLE}"
                        tools:text="@string/status" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/container_profile" />

            <RelativeLayout
                android:id="@+id/button_chats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_large">

                <LinearLayout
                    android:id="@+id/ll_chats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_chats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/profile"
                        android:src="@drawable/ic_chat"
                        app:tint="@color/eastern_blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:gravity="start|center_vertical"
                        android:text="@string/chats"
                        android:textSize="@dimen/medium_text_size" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_large">

                <LinearLayout
                    android:id="@+id/ll_friends_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_friends_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/profile"
                        android:src="@drawable/ic_group"
                        app:tint="@color/eastern_blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:gravity="start|center_vertical"
                        android:text="@string/friends"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_add_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_large">

                <LinearLayout
                    android:id="@+id/ll_add_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_add_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/add_friend"
                        android:src="@drawable/ic_person_add"
                        app:tint="@color/eastern_blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:gravity="start|center_vertical"
                        android:text="@string/add_friend"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_add_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_add_friend"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:visibility="gone">

                    <com.andreabaccega.widget.FormEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext_register_login"
                        android:gravity="center"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLines="2"
                        android:padding="@dimen/spacing_normal"
                        android:scrollbars="vertical"
                        android:textColor="@color/dark_grey"
                        android:textColorHint="@android:color/darker_gray"
                        android:textSize="@dimen/normal_text_size"
                        whatever:emptyErrorString="@string/error_field_must_not_be_empty"
                        whatever:testErrorString="@string/error_email_address_not_valid"
                        whatever:testType="email" />

                    <RelativeLayout
                        android:id="@+id/rl_actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_email"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/spacing_small">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <Button
                                android:id="@+id/button_add"
                                style="@style/Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="@dimen/spacing_large"
                                android:shadowColor="@color/light_magenta"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="5"
                                android:text="@string/send_request"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_text_size" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_large">

                <LinearLayout
                    android:id="@+id/ll_requests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/profile"
                        android:src="@drawable/ic_group_add"
                        app:tint="@color/eastern_blue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:gravity="start|center_vertical"
                        android:text="@string/friend_requests"
                        android:textSize="@dimen/normal_text_size" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_requests"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_normal">

            <LinearLayout
                android:id="@+id/ll_login_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_login_out"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:contentDescription="@string/logout"
                    android:src="@drawable/login_out"
                    app:tint="@color/eastern_blue" />

                <TextView
                    android:id="@+id/label_login_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:gravity="start|center_vertical"
                    android:text="@string/logout"
                    android:textSize="@dimen/normal_text_size" />

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.navigation.NavigationView>

</layout>