<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/athens_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_huge"
    android:paddingEnd="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_large">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_user"
        android:layout_width="@dimen/image_size_medium"
        android:layout_height="@dimen/image_size_medium"
        android:src="@drawable/ic_avatar_placeholder" />

    <TextView
        android:id="@+id/text_name"
        style="@style/Text.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        tools:text="Ivan Ivanov" />

    <TextView
        android:id="@+id/text_email"
        style="@style/Text.Footnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        tools:text="ivan.ivanov@gmail.com" />

    <TextView
        android:id="@+id/text_status"
        style="@style/Text.Footnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        tools:text="Always learning new stuff" />

</LinearLayout>