<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorError">@color/status_red</item>
        <item name="colorPrimary">@color/blueberry</item>
        <item name="colorPrimaryDark">@color/pale_sky</item>
        <item name="colorOnSurface">@color/light_grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="android:textColorSecondary">@color/pale_sky</item>
        <item name="android:textAppearanceListItem">@style/Text</item>
        <item name="android:textAppearanceSmall">@style/Text.Footnote</item>
        <item name="android:textAppearanceListItemSecondary">@style/Text.Footnote</item>
    </style>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceStyle">@style/PreferenceStyle</item>
        <item name="preferenceCategoryTitleTextColor">@color/blueberry</item>
        <item name="preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="preferenceCategoryTitleTextAppearance">@style/Text.CategoryTitle</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="PreferenceCategoryStyle" parent="Preference.Category.Material">
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="itemTextAppearance">@style/Text</item>
        <item name="itemTextColor">@color/woodsmoke</item>
        <item name="itemIconTint">@color/light_grey</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/woodsmoke</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="Text.Primary">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Text.Blueberry">
        <item name="android:textColor">@color/blueberry</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Text.Footnote">
        <item name="android:textSize">@dimen/font_extra_small</item>
        <item name="android:textColor">@color/pale_sky</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Text.CategoryTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="Text.Error">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/font_extra_small</item>
    </style>

    <style name="Text.Headline">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="Text.Button">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorTextAppearance">@style/Text.Error</item>
        <item name="boxBackgroundColor">@color/athens_gray</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
</resources>